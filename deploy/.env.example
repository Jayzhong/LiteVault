# Domain (used by containerized Caddy for TLS)
DOMAIN=your-domain.com

# Port bindings (host-caddy mode only)
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Database
POSTGRES_USER=litevault
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=litevault

# Clerk Authentication
CLERK_JWT_ISSUER=https://your-instance.clerk.accounts.dev
CLERK_JWKS_URL=https://your-instance.clerk.accounts.dev/.well-known/jwks.json
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_...
CLERK_SECRET_KEY=sk_live_...

# CORS - must match your frontend domain
CORS_ORIGINS=https://your-domain.com

# LLM Provider
LLM_PROVIDER=litellm
LLM_MODEL=openai/gpt-4o-mini
OPENAI_API_KEY=sk-...
# GEMINI_API_KEY=
# ANTHROPIC_API_KEY=

# Frontend API URL (leave empty for same-origin routing via Caddy)
NEXT_PUBLIC_API_BASE_URL=

# Logging
LOG_LEVEL=WARNING

# Object Storage (MinIO/S3)
# S3_ENDPOINT_URL is set in docker-compose (http://minio:9000 for internal access)
# S3_PUBLIC_URL is the browser-accessible URL for presigned upload/download URLs
# For production: expose MinIO via Caddy (e.g., https://your-domain.com/minio)
S3_PUBLIC_URL=https://your-domain.com/minio
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=CHANGE_ME_SECURE_MINIO_SECRET
S3_BUCKET_NAME=litevault-uploads
S3_REGION=us-east-1
